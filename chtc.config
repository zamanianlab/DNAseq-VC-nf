repo="Core_RNAseq-nf"

executor {
    name   = 'local'
    cpus   = 60
    memory = '500GB'
    queueSize = 15
}

params {
   input="$PWD/input"
   output="$PWD/output"
   work="$PWD/work"
   genome="$PWD/genome"
   aux="$PWD/${repo}/auxillary"

   huge=40
   big=10
   small=4
}

timeline {
  enabled = true
  file = "${params.output}/${params.dir}/trace/execution_timeline.html"
}
report {
  enabled = true
  file = "${params.output}/${params.dir}/trace/execution_report.html"
}
trace {
  enabled = true
  file = "${params.output}/${params.dir}/trace/execution_trace.txt"
}
